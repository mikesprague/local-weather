{
  "name": "local-weather",
  "version": "0.78.10",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn webpack && yarn lambda:build",
    "clean": "rm -rf ./public > /dev/null 2>&1",
    "serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "start": "yarn serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack --config ./webpack.config.js -p --colors --display minimal",
    "webpack:dev": "webpack --config ./webpack.config.js -d --colors --display minimal",
    "webpack:serve": "webpack-dev-server",
    "dev:build": "yarn dev:clean && yarn webpack:dev && yarn lambda:build",
    "dev:clean": "rm -rf ./build > /dev/null 2>&1",
    "dev:serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions -c ./lambda.config.dev.js"
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^6.1.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/pro-light-svg-icons": "^5.8.1",
    "@fortawesome/pro-solid-svg-icons": "^5.8.1",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@puresec/function-shield": "^1.2.7",
    "autoprefixer": "^9.5.1",
    "aws-sdk": "^2.437.0",
    "axios": "^0.18.0",
    "bulma": "^0.7.4",
    "cssnano": "^4.1.10",
    "dayjs": "^1.8.12",
    "dotenv": "^7.0.0",
    "logrocket": "^0.6.20",
    "register-service-worker": "^1.6.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sweetalert2": "^8.8.5",
    "tippy.js": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-loader": "^8.0.5",
    "compression-webpack-plugin": "^2.0.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.17.1",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "netlify-cli": "^2.11.7",
    "netlify-lambda": "^1.4.3",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.30.0",
    "webpack-bugsnag-plugins": "^1.4.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1",
    "webpackbar": "^3.1.5"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": ["last 2 versions"],
    "production": ["last 3 years", "safari >= 8", "IE >= 9"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "markdown",
      "prettier"
    ],
    "parserOptions": {
      "parser": "babel-parser",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "import/no-cycle": [
        "warn",
        {
          "maxDepth": 1
        }
      ],
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 120
  }
}
