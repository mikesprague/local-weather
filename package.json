{
  "name": "local-weather",
  "version": "1.0.1",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "engines": {
    "node": ">= 12.x",
    "npm": ">= 6.x",
    "yarn": ">= 1.x"
  },
  "scripts": {
    "build": "yarn webpack",
    "prebuild": "yarn clean",
    "postbuild": "yarn lambda:build",
    "check-env": "node -e 'console.log(process.env)' | grep npm",
    "clean": "rm -rf ./public > /dev/null 2>&1",
    "serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "start": "yarn serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "yarn version --no-git-tag-version",
    "ver:patch": "yarn ver:bump --patch && yarn ver:tag && yarn ver:publish",
    "ver:minor": "yarn ver:bump --minor && yarn ver:tag && yarn ver:publish",
    "ver:major": "yarn ver:bump --major && yarn ver:tag && yarn ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -p \"require('./package.json').version\") && git add package.json && git commit -s -m \":bookmark: Bump version v$APP_VERSION\" && git tag $APP_VERSION -s -m \"Bump version v$APP_VERSION\"",
    "webpack": "webpack --config ./webpack.config.js -p --colors --display minimal",
    "webpack:dev": "webpack --config ./webpack.config.js -d --colors --display minimal",
    "webpack:serve": "webpack-dev-server",
    "dev:build": "yarn dev:clean && yarn webpack:dev && yarn lambda:build",
    "dev:clean": "rm -rf ./build > /dev/null 2>&1",
    "dev:serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./webpack.functions.js",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn snyk-protect"
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^7.0.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/pro-duotone-svg-icons": "^5.13.0",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@sweetalert2/theme-dark": "^3.1.4",
    "autoprefixer": "^9.7.6",
    "aws-sdk": "^2.669.0",
    "axios": "^0.19.2",
    "azure-maps-control": "^2.0.25",
    "bulma": "^0.8.2",
    "bulma-switch": "^2.0.0",
    "cssnano": "^4.1.10",
    "dayjs": "^1.8.26",
    "dotenv": "^8.2.0",
    "logrocket": "^1.0.7",
    "register-service-worker": "^1.7.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "snyk": "^1.319.0",
    "sweetalert2": "^9.10.12",
    "tippy.js": "^6.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^3.1.0",
    "concurrently": "^5.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-security": "^1.4.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "netlify-cli": "^2.49.0",
    "netlify-lambda": "^1.6.3",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "prettier-stylelint": "^0.4.2",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^3.0.0",
    "webpack": "^4.43.0",
    "webpack-bugsnag-plugins": "^1.4.3",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpackbar": "^4.0.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 version"
    ],
    "production": [
      "> 1%",
      "last 2 versions",
      "not ie <= 10"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "markdown",
      "prettier",
      "security"
    ],
    "parserOptions": {
      "parser": "babel-parser",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "no-param-reassign": "warn",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "import/no-cycle": [
        "warn",
        {
          "maxDepth": 1
        }
      ],
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 120
  },
  "snyk": true
}
