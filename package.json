{
  "name": "local-weather",
  "version": "0.9.4",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass:watch": "node-sass --watch src/scss -o build/css",
    "sass:compile": "node-sass src/scss -o build/css",
    "sass:build": "node-sass src/scss -o build/css && rm public/assets/css/styles.css && cp build/css/styles.css public/assets/css/styles.css",
    "sass:lint": "sass-lint --verbose --no-exit"
  },
  "repository": {
    "url": "https://github.com/mikesprague/local-weather"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/mikesprague/local-weather/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "node-sass": "^4.9.0"
  },
  "devDependencies": {
    "sass-lint": "^1.12.1"
  }
}
