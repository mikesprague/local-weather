{
  "name": "local-weather",
  "version": "0.11.7",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass:watch": "node-sass --watch src/scss -o dist/css",
    "sass:compile": "node-sass src/scss -o dist/css",
    "sass:lint": "sass-lint --verbose --no-exit",
    "build": "node-sass src/scss -o dist/css --output-style compressed && cp -f node_modules/bootstrap/dist/css/bootstrap.min.css public/assets/css && cp -f node_modules/tippy.js/dist/tippy.all.min.js public/assets/js"
  },
  "repository": {
    "url": "https://github.com/mikesprague/local-weather"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "GNU GPLv3",
  "bugs": {
    "url": "https://github.com/mikesprague/local-weather/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "node-sass": "^4.9.0",
    "tippy.js": "^2.5.2"
  },
  "devDependencies": {
    "express": "^4.16.3",
    "path": "^0.12.7",
    "request": "^2.87.0",
    "sass-lint": "^1.12.1"
  }
}
