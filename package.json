{
  "name": "local-weather",
  "version": "0.88.3",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn webpack && yarn lambda:build",
    "clean": "rm -rf ./public > /dev/null 2>&1",
    "serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "start": "yarn serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver:bump": "yarn version --no-git-tag-version",
    "ver:patch": "yarn ver:bump --patch && yarn ver:tag && yarn ver:publish",
    "ver:minor": "yarn ver:bump --minor && yarn ver:tag && yarn ver:publish",
    "ver:major": "yarn ver:bump --major && yarn ver:tag && yarn ver:publish",
    "ver:publish": "git push --all && git push --tags",
    "ver:tag": "APP_VERSION=$(node -p \"require('./package.json').version\") && git add package.json && git commit -s -m \":bookmark: Bump version v$APP_VERSION\" && git tag $APP_VERSION -s -m \"Bump version v$APP_VERSION\"",
    "webpack": "webpack --config ./webpack.config.js -p --colors --display minimal",
    "webpack:dev": "webpack --config ./webpack.config.js -d --colors --display minimal",
    "webpack:serve": "webpack-dev-server",
    "dev:build": "yarn dev:clean && yarn webpack:dev && yarn lambda:build",
    "dev:clean": "rm -rf ./build > /dev/null 2>&1",
    "dev:serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./webpack.functions.js",
    "snyk-protect": "snyk protect",
    "prepublish": "yarn snyk-protect"
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^6.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.18",
    "@fortawesome/pro-light-svg-icons": "^5.8.2",
    "@fortawesome/pro-solid-svg-icons": "^5.8.2",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@puresec/function-shield": "^1.2.7",
    "autoprefixer": "^9.5.1",
    "aws-sdk": "^2.464.0",
    "axios": "^0.18.0",
    "bulma": "^0.7.5",
    "cssnano": "^4.1.10",
    "dayjs": "^1.8.14",
    "dotenv": "^8.0.0",
    "logrocket": "^1.0.0",
    "register-service-worker": "^1.6.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "snyk": "^1.169.1",
    "sweetalert2": "^8.11.6",
    "tippy.js": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^2.0.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-compat": "^3.1.1",
    "eslint-plugin-html": "^5.0.5",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "netlify-cli": "^2.11.19",
    "netlify-lambda": "^1.4.13",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.1",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.32.2",
    "webpack-bugsnag-plugins": "^1.4.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpackbar": "^3.2.0",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "last 4 chrome versions",
      "last 4 firefox versions",
      "last 4 safari versions"
    ],
    "development": [
      "last 1 chrome versions",
      "last 1 firefox versions",
      "last 1 safari versions"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "markdown",
      "prettier"
    ],
    "parserOptions": {
      "parser": "babel-parser",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "import/no-cycle": [
        "warn",
        {
          "maxDepth": 1
        }
      ],
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 120
  },
  "snyk": true
}
