{
  "name": "local-weather",
  "version": "0.69.1",
  "description": "Minimalist local weather app powered by Dark Sky",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn webpack && yarn lambda:build",
    "clean": "rm -rf ./public > /dev/null 2>&1",
    "serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "start": "yarn serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack --config ./config/webpack.config.js -p --colors --display minimal",
    "webpack:dev": "webpack --config ./config/webpack.config.js -d --colors --display minimal",
    "webpack:serve": "webpack-serve ./config/webpack.config.js --port 5500",
    "dev:build": "yarn dev:clean && yarn webpack:dev && yarn lambda:build",
    "dev:clean": "rm -rf ./build > /dev/null 2>&1",
    "dev:serve": "concurrently 'yarn webpack:serve' 'yarn lambda:serve' --names 'ðŸ“¦ ,ðŸ–¥ ' --prefix '[{name}] ' --kill-others",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions -c ./config/lambda.config.dev.js"
  },
  "repository": {
    "url": "https://github.com/mikesprague/localweather-io"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/localweather-io/issues"
  },
  "homepage": "https://localweather.io",
  "dependencies": {
    "@bugsnag/js": "^5.2.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.14",
    "@fortawesome/pro-light-svg-icons": "^5.7.1",
    "@fortawesome/pro-solid-svg-icons": "^5.7.1",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@puresec/function-shield": "^1.2.4",
    "autoprefixer": "^9.4.7",
    "aws-sdk": "^2.401.0",
    "axios": "^0.18.0",
    "bulma": "^0.7.4",
    "cssnano": "^4.1.8",
    "dayjs": "^1.8.5",
    "dotenv": "^6.2.0",
    "register-service-worker": "^1.6.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "sweetalert2": "^8.0.6",
    "tippy.js": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/runtime": "^7.3.1",
    "babel-loader": "^8.0.5",
    "compression-webpack-plugin": "^2.0.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-compat": "^2.7.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "netlify-cli": "^2.7.0",
    "netlify-lambda": "^1.3.3",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.2",
    "webpack": "^4.29.3",
    "webpack-bugsnag-plugins": "^1.3.0",
    "webpack-cli": "^3.2.3",
    "webpack-serve": "^2.0.3",
    "webpackbar": "^3.1.5"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "last 2 years",
    "IE 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "markdown",
      "prettier"
    ],
    "parserOptions": {
      "parser": "babel-parser",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "import/no-cycle": [
        "warn",
        {
          "maxDepth": 1
        }
      ],
      "import/prefer-default-export": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2,
    "plugins": [
      "all"
    ],
    "printWidth": 120
  }
}
